<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pedido"
    android:orientation="vertical"
    android:background="#fefce0">

<LinearLayout
    android:layout_marginTop="15dp"
    android:layout_width="412dp"
    android:layout_height="40dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pedido"
    android:textSize="30dp"
    android:textColor="#785616"
    android:layout_marginLeft="160dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="3dp"
        android:background="#785616"/>

    <EditText
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:gravity="center"
        android:background="#fefac0"
        android:padding="5dp"
        android:textColor="#785616"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/imgproducto"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
                android:layout_gravity="center">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="12dp"
                    android:textColor="#785616"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabores de masas:"
                    android:textSize="20dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/tbvanilla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vainilla"
                                android:textColor="#785616" />
                            <RadioButton
                                android:id="@+id/rbnaranja"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Naranja"
                                android:textColor="#785616"/>

                        </RadioGroup>
                        <RadioGroup
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/rbchocolate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chocolate"
                                android:textColor="#785616"/>
                            <RadioButton
                                android:id="@+id/rbmanzana"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manzana"
                                android:textColor="#785616"/>

                        </RadioGroup>

                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbmixto"
                        android:layout_marginLeft="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mixto"
                        android:textColor="#785616"/>
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabores de relleno:"
                android:textSize="20dp"
                android:textColor="#785616"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/tbarequipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arequipe"/>
            <RadioButton
                android:id="@+id/rbnutella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutella"/>
        </LinearLayout>



    </LinearLayout>
    <RadioButton
        android:id="@+id/rbbuttervcream"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buttercream"/>

    <Button
        android:id="@+id/btnagendar"
        android:layout_marginTop="35dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="AGENDAR"
        android:backgroundTint="#f4eb49"
        android:textColor="#785616"
        android:gravity="center"
        android:layout_gravity="center"
        />


    <EditText
        android:id="@+id/ettotal"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#785616"
        android:backgroundTint="#f4eb49"
        android:background="#f4eb49"
        android:text="TOTAL..."/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="411dp"
        android:layout_height="5dp"
        android:background="#785616"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="¿Quieres otro diseño?"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactanos"
                android:textColor="#785616"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/wp" />

    </LinearLayout>






</LinearLayout>