<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logueado"
    android:orientation="vertical"
    android:background="#fefce0">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:background="#fefac0">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorías"
        android:textColor="#788616"
        android:textSize="35dp"/>
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="5dp"
        android:background="#785616"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tortica"
            android:layout_marginLeft="60dp"
            android:textColor="#785616"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cupcakes"
            android:layout_marginLeft="130dp"
            android:textColor="#785616"
            android:textSize="20dp"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="400dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center">

       <ImageView
           android:id="@+id/imgtoritcas"
           android:layout_width="150dp"
           android:layout_height="180dp"
           android:layout_gravity="center"
           android:src="@mipmap/fire"/>
       <ImageView
           android:id="@+id/imgcupcake"
           android:layout_marginLeft="45dp"
           android:layout_width="150dp"
           android:layout_height="180dp"
           android:layout_gravity="center"
           android:src="@mipmap/hombre" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="5dp"
        android:background="#785616"
        android:layout_marginTop="15dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minicake"
            android:layout_marginLeft="60dp"
            android:textColor="#785616"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minipersonal"
            android:layout_marginLeft="105dp"
            android:textColor="#785616"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgminicake"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@mipmap/batman" />

        <ImageView
            android:id="@+id/imgminipersonal"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:src="@mipmap/cactus" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="411dp"
        android:layout_height="5dp"
        android:background="#785616"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="¿Quieres otro diseño?"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactanos"
                android:textColor="#785616"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/wp" />

    </LinearLayout>

</LinearLayout>