<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fefce0">

    <androidx.cardview.widget.CardView
        android:id="@+id/cwTortica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:elevation="2dp"
        app:cardBackgroundColor="#fefce0"
        >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/tvidtortica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#785616"
                />
            <TextView
                android:id="@+id/tvnombretortica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#785616"
                />
            <TextView
                android:id="@+id/tvpreciotortica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#785616"
                />
            <TextView
                android:id="@+id/tvcapaciddtortica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capacidad: "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#785616"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>>

</RelativeLayout>